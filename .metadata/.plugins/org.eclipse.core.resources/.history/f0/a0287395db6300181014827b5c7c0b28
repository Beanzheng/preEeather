		<script>
			 var icons = new Skycons({"color": "#fff"}),
				  list  = [
					"clear-night","wind","rain","cloudy", "snow","fog"
				  ],
				  i;

			  for(i = list.length; i--; )
				icons.set(list[i], list[i]);

			  icons.play();
		</script>
